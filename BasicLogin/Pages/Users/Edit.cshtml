@page
@model BasicLogin.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account Information</h4>
<hr />
<div class="row" >
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserAccount.Id" />
            <div class="form-group">
                <label asp-for="UserAccount.Email" class="control-label"></label>
                <input asp-for="UserAccount.Email" class="form-control" />
                <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.Password" class="control-label"></label>
                <input asp-for="UserAccount.Password" class="form-control" />
                <span asp-validation-for="UserAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.FirstName" class="control-label"></label>
                <input asp-for="UserAccount.FirstName" class="form-control" />
                <span asp-validation-for="UserAccount.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.LastName" class="control-label"></label>
                <input asp-for="UserAccount.LastName" class="form-control" />
                <span asp-validation-for="UserAccount.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.BirthDate" class="control-label"></label>
                <input asp-for="UserAccount.BirthDate" class="form-control" />
                <span asp-validation-for="UserAccount.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.UserAccount.Id">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
